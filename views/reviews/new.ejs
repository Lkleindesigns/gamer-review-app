<% include ../partials/header %>
<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Leave a review for <%=game.name%></h1>
    <div style="width: 30%; margin:25px auto;">
      <form action="/games/<%=game.id%>/reviews" method="POST">
      <div class="form-group">
        <input class="form-control" type="text" name="review[text]" placeholder="Leave a review">
      </div>

      <div class="form-group">
        <input class="form-control" type="text" name="review[author]" placeholder="author">
      </div>

      <div class="form-group">
        <button class="btn btn-large btn-primary btn-block">Submit!</button>
      </div>
      </form>
      <a href="/games">Go Back</a>
    </div>
  </div>
</div>


<% include ../partials/footer %>
