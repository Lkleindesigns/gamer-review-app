<% include ../partials/header %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">GamerReviews</p>
      <div class="list-grou">
        <li class="list-group-item active">Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </div>
      MAP
    </div>
    <div class='col-md-9'>
      <div class="thumbnail">
        <img class="img-responsive" src="<%= game.image %>">
        <div class="caption-full">
          <h4 class="pull-right"><%=game.genre%></h4>
          <h4><a><%=game.name%></a></h4>
          <p><%=game.description%></p>
        </div>
      </div>
      <div class="well">
        <div class="text-right">
            <a class="btn btn-success" href="/games/<%=game._id%>/reviews/new">Add new review!</a>
        </div>
        <hr>
        <%game.reviews.forEach(function(review) { %>
        <div class="row">
          <div class="col-md-12">
            <strong><%=review.author%></strong>
            <span class="pull-right"> 10 days ago</span>
            <p><%=review.text%></p>
          </div>
        </div>
         <% })%>
      </div>
    </div>
  </div>
</div>


