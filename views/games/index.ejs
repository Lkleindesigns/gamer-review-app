<% include ../partials/header %>

<h4><%= currentUser %></h4>

<div class="container">
  <div class="row text-center" style="display:flex; flex-wrap">
    <% games.forEach(function(game){ %>
      <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
          <img src="<%= game.image %>">
        </div>
        <div class="caption">
          <h4><%= game.name %></h4>
        </div>
        <p>
          <a href="/games/<%= game._id %>" class="btn btn-primary">Reviews</a>
        </p>
      </div>
      <% }) %>
  </div>
</div>

<% include ../partials/footer %>
