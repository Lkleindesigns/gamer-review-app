<% include ../partials/header %>

<h4><%= currentUser %></h4>

<div class="container">
    <header class="jumbotron">
      <div class="container">
        <h1>Welcome to GamerReviews!</h1>
        <p>View community driven game reviews!</p>
        <p>
          <a class="btn btn-primary btn-large" href="/games/new">Add New Game!</a>
        </p>
      </div>
    </header>

  <div class="row text-center" style="display:flex; flex-wrap">
    <% games.forEach(function(game){%>
      <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
          <img src="<%= game.image %>">
        </div>
        <div class="caption">
          <h4><%= game.name %></h4>
        </div>
        <p>
          <a href="/games/<%= game._id %>" class="btn btn-primary">Reviews</a>
        </p>
      </div>
      <% })%>
  </div>
</div>





<% include ../partials/footer %>
